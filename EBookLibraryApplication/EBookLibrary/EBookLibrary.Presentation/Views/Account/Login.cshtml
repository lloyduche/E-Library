@model EBookLibrary.ViewModels.UserVMs.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
@{ 
    Layout = "_PlainLayout";
}



<div class="d-flex flex-row justify-content-center">
    <div class="card col-lg-3 col-md-5 mx-auto top-50 box-shadow border-1 bg-light p-4" style="margin-top:10%">
        <div class="myform form ">
            <div class="logo mb-3">
                <div class="col-md-12 text-center">
                    <h4>Login</h4>
                </div>
            </div>
            <form asp-action="Login" method="post" asp-controller="Account">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" placeholder="Enter email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" placeholder="Enter Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <p class="text-cente"><input asp-for="RememberMe" />&nbsp;<label asp-for="RememberMe"></label> </p>
                </div>
                <div class="col-md-12 text-center ">
                    <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">Login</button>
                </div>
                <br />

                <div class="form-group">
                    <p class="text-center">Don't have account? <a id="signup" asp-controller="Account" asp-action="Register">Sign up here</a></p>
                </div>
            </form>
        </div>

    </div>
</div>
