@using Microsoft.AspNetCore.Identity;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EBookLibrary.Presentation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/newStyle.css" />
    <link rel="stylesheet" href="~/font-awesome/css/all.min.css" />
    <link href="~/css/error.css" rel="stylesheet" />
    <link href="~/css/registration.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid p-4">
                <a class="navbar-brand ml-lg-4" asp-area="" asp-controller="Home" asp-action="Index">EB<i class="fa fa-glasses fa-2x text-primary"></i>kLibrary</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav myNav">
                        <li class="nav-item">
                            <a class="nav-link text-secondary" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link btn btn-outline-warning pr-4 pl-4 login" asp-area="" asp-controller="Dashboard" asp-action="Admin">Dashboard</a>
                                </li>
                            }
                            if (User.IsInRole("Regular"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link btn btn-outline-warning pr-4 pl-4 login" asp-area="" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-warning pr-4 pl-4 login" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Sign Up</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-warning pr-4 pl-4 login" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>

                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid p-0 mb-3 bg-white">
        <main role="main" class="pb-3 mb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/font-awesome/js/all.min.js" type="text/javascript" asp-append-version="false"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>


