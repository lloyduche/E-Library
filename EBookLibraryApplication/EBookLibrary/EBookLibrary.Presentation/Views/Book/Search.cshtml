@model EBookLibrary.DTOs.PagedResult<EBookLibrary.ViewModels.BookVMs.BookCardViewModel>


    <section>
        <form action="/book/search">
            <div class="d-flex flex-wrap flex-lg-wrap justify-content-center pt-2 mb-4">
                <div class="col-lg-6 border-0 mb-3 mt-4 text-center mySection-header">
                    <div class="input-group text-center mb-3 box-shadow ">
                        <input type="text" name="query" value="@ViewBag.Query" class="form-control" style="font-size:22px; padding:1.2em;" placeholder="Search For Books..." aria-label="Recipient's username" aria-describedby="basic-addon3">
                        <input type="submit" class="input-group-text bg-primary pl-4 pr-4" style="color:aliceblue;" id="basic-addon3" value="Search" />
                    </div>
                </div>

            </div>

        </form>

    </section>




<section>

   
        <div class="d-flex flex-wrap flex-lg-wrap justify-content-center pt-2 mb-4">

            
            @if (Model.Result.Count == 0)
            {

                <div class="wrapper" id="errorPageBody">
                    <div class="box">
                        <h2 class="text-info"><strong>Nothing Matched Your Search </strong></h2>
                    </div>
                </div> 
             }
            else
            {

                @foreach (var book in Model.Result)
                {

                    <div class="card border-0 col-lg-2 col-sm-6 mb-3 mt-4 mr-2 ml-2">
                        <a href="#"><img class="card-img-top rounded" asp-append-version="true" src="~/images/image03.jpg" alt="image" width="200" height="250" /></a>
                        <div class="card-body p-0 mt-3 myBook-card">
                            <p class="text-secondary text-capitalize">@book.Title</p>
                            <p class="text-secondary text-capitalize">@book.Category</p>
                            <p class="text-secondary text-capitalize" style=" font-size:20px;">@book.Author</p>
                            @if (@book.Rating == 5)
                            {
                        <p>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-warning"></i>
                        </p> }
                    else if (@book.Rating == 4)
                    {
                        <p>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-secondary"></i>
                        </p> }
                    else if (@book.Rating == 3)
                    {
                        <p>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-secondary"></i>
                            <i class="fa fa-star text-secondary"></i>
                        </p> }
                    else if (@book.Rating == 2)
                    {
                        <p>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-secondary"></i>
                            <i class="fa fa-star text-secondary"></i>
                            <i class="fa fa-star text-secondary"></i>
                        </p> }
                    else if (@book.Rating == 1)
                    {
                        <p>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-secondary"></i>
                            <i class="fa fa-star text-secondary"></i>
                            <i class="fa fa-star text-secondary"></i>
                            <i class="fa fa-star text-secondary"></i>
                        </p> }
                    else
                    {
                        <p>
                            <i class="fa fa-star text-secondary"></i>
                            <i class="fa fa-star text-secondary"></i>
                            <i class="fa fa-star text-secondary"></i>
                            <i class="fa fa-star text-secondary"></i>
                            <i class="fa fa-star text-secondary"></i>
                        </p>}
                            <p class="text-secondary text-capitalize" style=" font-size:20px;"> Available</p>
                        </div>
                    </div>
                 }  
            }
        </div>
   
</section>

<section>
    <div class="d-flex flex-wrap flex-lg-wrap justify-content-center pt-2 mb-4">
        <div class=border-0 col-lg-12 col-sm-12 mt-4">
            <div class="btn-group-lg">
                <a asp-action="search" asp-controller="book" asp-route-query="@ViewBag.Query" asp-route-pagenumber="@Model.PreviousPage" class="btn btn-outline-primary" aria-current="page"><i class="fa fa-angle-double-left"></i></a>
                <a asp-action="search" asp-controller="book" asp-route-query="@ViewBag.Query" asp-route-pagenumber="@Model.NextPage" class="btn btn-outline-primary"><i class="fa fa-angle-double-right"></i></a>
            </div>
        </div>
    </div>
</section>
